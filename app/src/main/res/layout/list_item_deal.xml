<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100sp"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/linearDealDiscount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15sp">
    <TextView
        android:id="@+id/textDealDescGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:text="Get"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textDealDescPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="15%"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textDealDescOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="off  on"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textDealDescItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="Silk Sarees"
        android:textSize="20sp" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/linearDealValidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textValidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0.03"
            android:padding="5sp"
            android:text="Coupon Validity :"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textValidityDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0.03"
            android:padding="5sp"
            android:text="8 May 2016 - 30 Sep 2016"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearDealValidity"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:src="@drawable/team" />

        <TextView
            android:id="@+id/textUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0.00"
            android:padding="5sp"
            android:text="20"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textBought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0.03"
            android:padding="5sp"
            android:text=" Bought!"
            android:textSize="12sp" />


    </LinearLayout>
</RelativeLayout>
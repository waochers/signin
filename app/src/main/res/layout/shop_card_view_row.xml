<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff1"
    android:orientation="vertical"
    >

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_margin="8dp"
    android:layout_marginTop="50sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            />

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:maxLines="3"
            android:padding="8dp"
            android:text="ShopName"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_toLeftOf="@+id/shopDiscount"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:maxLines="3"-->
            <!--android:padding="8dp"-->
            <!--android:text="Shop Name"-->
            <!--android:textColor="#666"-->
            <!--android:textSize="14dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_below="@+id/headingCard"-->
            <!--android:id="@+id/textView2"-->
            <!--android:layout_toLeftOf="@+id/textView3"-->
            <!--android:layout_toStartOf="@+id/textView3" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shop Description:fjddtghdujcyhgdxyhfjkgvhjkvjhhgnvjhvjmnbjhn"
            android:id="@+id/shopAddress"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/shopName"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="20.0%"
            android:padding="8dp"
            android:id="@+id/shopDiscount"
            android:layout_alignBottom="@+id/shopName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>